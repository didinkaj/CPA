<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.johnson.priceadvvisorbeta.SearchActivity">

    <include layout="@layout/app_bar"
        android:id="@+id/app_bar"/>
    <ScrollView
        android:layout_marginTop="58dp"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:padding="10dp"
                android:src="@drawable/shopping_bag_icon"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/titleBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ecfcfc"
                android:padding="8dp"
                android:text="@string/aboutdvp"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aboutpage"
                android:id="@+id/textView"
                android:padding="15dp"
                android:layout_marginTop="10dp" />



        </LinearLayout>
    </ScrollView>


</RelativeLayout>
