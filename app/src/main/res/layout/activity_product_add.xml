<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.registration_section">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="58dp"
        tools:context=".DisplayContact">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="2dp">

            <TableLayout
                android:id="@+id/tb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="25dp"
                android:stretchColumns="2">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/editTextName"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="bottom"
                        android:text="Quantity"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="10dip"
                        android:text="@string/colonn" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp">

                        <EditText
                            android:id="@+id/editTextQuantity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:ems="10"
                            android:inputType="phone"
                            android:paddingLeft="5dp"
                            android:textSize="15sp" />
                    </android.support.design.widget.TextInputLayout>
                </TableRow>

                <TableRow android:layout_width="wrap_content">

                    <TextView
                        android:id="@+id/textUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="Unit"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_gravity="bottom"
                        android:padding="10dip"
                        android:text="@string/colonn" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp">

                        <EditText
                            android:id="@+id/editTextUnit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="5dp"
                            android:ems="10"
                            android:inputType="text"
                            android:paddingLeft="5dp"
                            android:textSize="15sp" />
                    </android.support.design.widget.TextInputLayout>
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="bottom"
                        android:text="Name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="10dip"
                        android:text="@string/colonn" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp">

                        <EditText
                            android:id="@+id/editTextName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="5dp"
                            android:ems="10"
                            android:inputType=""
                            android:paddingLeft="5dp"
                            android:textSize="15sp"></EditText>
                    </android.support.design.widget.TextInputLayout>
                </TableRow>

                <TableRow android:layout_width="wrap_content">

                    <TextView
                        android:id="@+id/textMinPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/editTextName"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="bottom"
                        android:text="MinPrice"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_gravity="bottom"
                        android:padding="10dip"
                        android:text="@string/colonn" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/editTextMinPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="5dp"
                            android:ems="10"

                            android:inputType="phone"
                            android:paddingLeft="5dp"
                            android:textSize="15sp"></EditText>
                    </android.support.design.widget.TextInputLayout>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textMaxPrice"
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="bottom"
                        android:text="MaxPrice"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_gravity="bottom"
                        android:padding="10dip"
                        android:text="@string/colonn" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp">

                        <EditText
                            android:id="@+id/editTextMaxPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="5dp"
                            android:ems="10"
                            android:inputType="phone"
                            android:paddingLeft="5dp"
                            android:textSize="15sp"></EditText>
                    </android.support.design.widget.TextInputLayout>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/editTextName"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="bottom"
                        android:text="Currency"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_gravity="bottom"
                        android:padding="10dip"
                        android:text="@string/colonn" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp">

                        <EditText
                            android:id="@+id/editTextCurrency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:ems="10"
                            android:inputType="text"
                            android:paddingLeft="5dp"
                            android:textSize="15sp"></EditText>
                    </android.support.design.widget.TextInputLayout>
                </TableRow>


            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0"
                android:layout_below="@+id/tb">

                <TableRow
                    android:layout_marginTop="5dp">
                    <RelativeLayout android:orientation="vertical">

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/bt_bg"
                        android:onClick="run"
                        android:text="@string/save"
                        android:textColor="#ffffff" />


                    <Button
                        android:id="@+id/imageButtonlk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bt_bg"
                        android:padding="15dp"
                        android:textColor="#ffffff"
                        android:text="Add to Favorite"
                        android:src="@drawable/ic_favorite" />


                    <Button
                        android:id="@+id/rmf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bt_bg"
                        android:padding="10dp"
                        android:text="Remove Favorite"
                        android:textColor="@color/white" />
                    </RelativeLayout>
                </TableRow>
            </TableLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
