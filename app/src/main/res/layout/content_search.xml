<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.johnson.priceadvvisorbeta.SearchActivity">

    <include layout="@layout/app_bar"
        android:id="@+id/app_bar"/>
    <ScrollView
        android:layout_marginTop="58dp"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tble"
                android:background="#ecfcfc"
                android:padding="8dp"
                android:text="Enter search Phrase"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/sres"
                android:layout_width="match_parent"
                android:textColor="@color/colorAccent"
                android:visibility="invisible"
                android:layout_height="wrap_content" />


            <EditText
                android:id="@+id/editTextsearch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/tab_bg"
                android:ems="10"
                android:inputType="text"
                android:padding="15dp"
                android:singleLine="false" />


            <Button
                android:id="@+id/btnsavemsrch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right|bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bt_bg"
                android:orderInCategory="400"
                android:padding="5dp"
                android:text="Search"
                android:textColor="#ffffff" />






        </LinearLayout>
    </ScrollView>


</RelativeLayout>
