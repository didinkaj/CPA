<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="4dp"
    tools:context="com.example.johnson.priceadvvisorbeta.WatchDogSection">

    <!-- TODO: Update blank fragment layout -->


    <TableLayout
        android:id="@+id/tble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>

            <ImageView
                android:id="@+id/user_pic"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="@dimen/fab_margin"
                android:src="@drawable/user_info_icon" />

            <TableLayout android:layout_width="match_parent">

                <TableRow>

                    <TextView
                        android:drawableLeft="@drawable/iic_info"
                        android:paddingBottom="6dp"
                        android:paddingTop="5dip" />

                    <TextView
                        android:paddingTop="5dip"
                        android:text=":" />

                    <TextView
                        android:id="@+id/txt_text_name"
                        android:gravity="left"
                        android:padding="0dip"
                        android:text="@string/blank" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:drawableLeft="@drawable/ic_email"
                        android:paddingBottom="6dip"
                        android:paddingTop="3dp" />

                    <TextView
                        android:padding="0dip"
                        android:text=":" />

                    <TextView
                        android:id="@+id/txt_text"
                        android:gravity="left"
                        android:padding="0dip"
                        android:text="@string/blank" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:drawableLeft="@drawable/ic_call"
                        android:paddingRight="0dip" />

                    <TextView
                        android:padding="1dip"
                        android:text=":" />

                    <TextView
                        android:id="@+id/phoneview"
                        android:gravity="left"
                        android:padding="0dip"
                        android:text="@string/blank" />
                </TableRow>
            </TableLayout>

        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/titleU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tble"
        android:background="#ecfcfc"
        android:padding="8dp"
        android:text="Registered Users"
        android:textColor="@color/black"
        android:textStyle="bold" />


    <ListView
        android:id="@+id/listView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleU"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />


</RelativeLayout>

