<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.johnson.priceadvvisorbeta.SearchActivity">

    <include layout="@layout/app_bar"
        android:id="@+id/app_bar"/>
    <ScrollView
        android:layout_marginTop="58dp"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:padding="10dp"
                android:src="@drawable/wp_20150703_08_18_03_pro_1"
                android:layout_gravity="center_horizontal" />


            <TextView
                android:id="@+id/titleBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tble"
                android:background="#ecfcfc"
                android:padding="8dp"
                android:text="Developer Name"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:text=" Didinya Johson"
                android:id="@+id/textView"
                android:padding="5dp"
                android:layout_marginTop="10dp" />
            <TextView
                android:id="@+id/titleBodye"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tble"
                android:background="#ecfcfc"
                android:padding="8dp"
                android:text="Email Address"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="didinkaj@gmail.com"
                android:id="@+id/textView2"
                android:padding="5dp"
                android:layout_marginTop="15dp" />
            <TextView
                android:id="@+id/titleBodyp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tble"
                android:background="#ecfcfc"
                android:padding="8dp"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+25712328250"
                android:id="@+id/textView3"
                android:padding="5dp"
                android:layout_marginTop="15dp" />




        </LinearLayout>
    </ScrollView>


</RelativeLayout>
