<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <ScrollView
        android:id="@+id/scr"
        android:fillViewport="true"
        android:layout_above="@+id/sf"
        android:layout_width="match_parent"
        android:layout_height="350dp"

        android:layout_marginTop="58dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ListView
                android:id="@+id/listViewmsg"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="11.29"
                android:padding="5dp" />

            `
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sf"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="10dp"
        android:gravity="bottom|clip_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ecfcfc"
            android:padding="8dp"
            android:text="@string/ms"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editTextWatchdog"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.57"
            android:background="@drawable/tab_bg"
            android:ems="10"
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:singleLine="false" />


        <Button
            android:id="@+id/btnsavemsg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bt_bg"
            android:orderInCategory="400"
            android:padding="5dp"
            android:text="@string/send"
            android:textColor="#ffffff" />
    </LinearLayout>


</RelativeLayout>
